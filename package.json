{
  "name": "@johnny850221/react-components-starter",
  "version": "0.0.8",
  "description": "A starter for creating a React component library.",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/author/library#readme",
  "bugs": {
    "url": "https://github.com/author/library/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/author/library.git"
  },
  "author": "jim850221@gmail.com",
  "files": [
    "dist",
    "src/stylesheets",
    "tailwind.config.ts"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js",
      "require": "./dist/components/index.cjs"
    },
    "./theme": {
      "types": "./dist/theme/index.d.ts",
      "import": "./dist/theme/index.js",
      "require": "./dist/theme/index.cjs"
    },
    "./stylesheets/theme.css": "./src/stylesheets/theme.css",
    "./stylesheets/token.css": "./src/stylesheets/token.css"
  },
  "typesVersions": {
    "*": {
      "components": ["./dist/components/index.d.ts"],
      "theme": ["./dist/theme/index.d.ts"]
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "play": "vite --config playground/vite.config.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && yarn publish",
    "prepublishOnly": "yarn build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "@tailwindcss/postcss": {
      "optional": true
    }
  },
  "devDependencies": {
    "@storybook/addon-docs": "^10.0.2",
    "@storybook/addon-links": "^10.0.2",
    "@storybook/addon-onboarding": "^10.0.2",
    "@storybook/react-vite": "^10.0.2",
    "@tailwindcss/postcss": "^4.1.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@tsconfig/strictest": "^2.0.6",
    "@types/node": "^24.9.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "bumpp": "^10.3.1",
    "happy-dom": "^20.0.8",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "storybook": "^10.0.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "4.1.0",
    "tsdown": "^0.15.9",
    "typescript": "^5.5.4",
    "vite": "npm:rolldown-vite@^7.1.19",
    "vitest": "^4.0.1"
  },
  "dependencies": {
    "tailwind-variants": "^3.1.1"
  }
}
